<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- Console appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}</pattern>
        </encoder>
    </appender>

    <!-- Main application log file -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE:-logs/rabbitmq-admin.log}</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN:-%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%t] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE:-logs/rabbitmq-admin.log}.%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Audit log file -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/audit.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/audit-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>90</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Performance log file -->
    <appender name="PERFORMANCE_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/performance.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/performance-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Console appenders for structured logging in containers -->
    <appender name="AUDIT_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [AUDIT] - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="PERFORMANCE_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [PERFORMANCE] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Audit logger configuration -->
    <logger name="AUDIT.com.rabbitmq.admin.service.ResourceAuditService" level="INFO" additivity="false">
        <springProfile name="!production,!docker">
            <appender-ref ref="AUDIT_FILE"/>
        </springProfile>
        <springProfile name="production,docker">
            <appender-ref ref="AUDIT_CONSOLE"/>
        </springProfile>
    </logger>

    <!-- Performance logger configuration -->
    <logger name="PERFORMANCE" level="INFO" additivity="false">
        <springProfile name="!production,!docker">
            <appender-ref ref="PERFORMANCE_FILE"/>
        </springProfile>
        <springProfile name="production,docker">
            <appender-ref ref="PERFORMANCE_CONSOLE"/>
        </springProfile>
    </logger>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <springProfile name="!test,!production,!docker">
            <appender-ref ref="FILE"/>
        </springProfile>
    </root>

    <!-- Development profile specific settings -->
    <springProfile name="dev,development">
        <logger name="com.rabbitmq.admin" level="DEBUG"/>
        <logger name="org.springframework.security" level="DEBUG"/>
    </springProfile>

    <!-- Production profile specific settings -->
    <springProfile name="prod,production">
        <logger name="com.rabbitmq.admin" level="INFO"/>
        <logger name="org.springframework.security" level="WARN"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="org.springframework.boot.actuate" level="WARN"/>
    </springProfile>

    <!-- Docker/Container profile specific settings -->
    <springProfile name="docker">
        <logger name="com.rabbitmq.admin" level="INFO"/>
        <logger name="org.springframework.security" level="WARN"/>
        <logger name="org.springframework.web" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="org.springframework.boot.actuate" level="WARN"/>
        <logger name="org.flywaydb" level="INFO"/>
    </springProfile>

    <!-- Test profile specific settings -->
    <springProfile name="test">
        <logger name="com.rabbitmq.admin" level="DEBUG"/>
        <logger name="org.springframework.test" level="INFO"/>
        <logger name="org.testcontainers" level="INFO"/>
    </springProfile>
</configuration>