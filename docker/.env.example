# RabbitMQ Admin Local Development Environment
# Copy this file to .env for local development

# Database Configuration (for local development)
POSTGRES_DB=rabbitmq_admin
POSTGRES_USER=rabbitmq_admin
POSTGRES_PASSWORD=password
POSTGRES_PORT=5433  # Use 5433 to avoid conflicts with local PostgreSQL

# Application Configuration
APP_PORT=8080

# JWT Configuration - Change this for production!
JWT_SECRET_KEY=dev-secret-key-change-in-production

# Resource Management Configuration
# Auto-refresh settings (milliseconds)
RESOURCE_REFRESH_DEFAULT_INTERVAL=30000  # 30 seconds
RESOURCE_REFRESH_MIN_INTERVAL=15000      # 15 seconds minimum
RESOURCE_REFRESH_MAX_INTERVAL=300000     # 5 minutes maximum

# Pagination settings
RESOURCE_DEFAULT_PAGE_SIZE=50            # Default items per page
RESOURCE_MAX_PAGE_SIZE=500               # Maximum items per page

# Caching configuration
RESOURCE_CACHE_ENABLED=true              # Enable client-side caching
RESOURCE_CACHE_DEFAULT_TTL=30000         # 30 seconds cache TTL
RESOURCE_CACHE_MAX_SIZE=1000             # Maximum cache entries

# Rate limiting
RESOURCE_RATE_LIMIT_RPM=120              # Requests per minute per user
RESOURCE_RATE_LIMIT_BURST=10             # Burst size for rate limiting

# Connection pool settings for RabbitMQ API calls
RESOURCE_POOL_MAX_TOTAL=20               # Maximum total connections
RESOURCE_POOL_MAX_PER_ROUTE=10           # Maximum connections per route
RESOURCE_POOL_CONNECTION_TIMEOUT=10000   # Connection timeout (ms)
RESOURCE_POOL_SOCKET_TIMEOUT=30000       # Socket timeout (ms)